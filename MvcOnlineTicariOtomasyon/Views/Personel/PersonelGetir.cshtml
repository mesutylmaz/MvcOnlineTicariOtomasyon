@model MvcOnlineTicariOtomasyon.Models.Siniflar.Personel
@{
    ViewBag.Title = "PersonelGetir";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Personel Güncelleme Sayfası</h2>
<br />

@using (Html.BeginForm("PersonelGuncelle", "Personel", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @*@Html.AntiForgeryToken()*@
    <div class="form-group">
        @Html.HiddenFor(x => x.PersonelID)

        Personel Görseli
        @Html.EditorFor(z => z.PersonelGorseli, new { htmlAttributes = new { @class = "form-control", type = "file" } })
        <br />

        Personel Adı
        @Html.TextBoxFor(z => z.PersonelAdi, new { @class = "form-control" })
        <br />

        Personel Soyadı
        @Html.TextBoxFor(z => z.PersonelSoyadi, new { @class = "form-control" })
        <br />

        Departman
        @Html.DropDownListFor(x => x.Departmanid, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
        <br />
    </div>
    <br />
    <button class="btn" style="background-color:#a725a4; color:antiquewhite">Değişiklikleri Kaydet</button>
    <a href="/Personel/PersonelListesi" class="btn btn-info" style="background-color:darkcyan; color:aliceblue;">Personel Listesi</a>
}