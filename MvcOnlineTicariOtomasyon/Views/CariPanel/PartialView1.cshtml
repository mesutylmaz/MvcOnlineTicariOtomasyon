@model MvcOnlineTicariOtomasyon.Models.Siniflar.Cari

@using (Html.BeginForm("CariBilgiGuncelle", "CariPanel", FormMethod.Post))
{

<form class="form-horizontal">

    @Html.HiddenFor(x => x.CariID)

    <div class="form-group row">

        <label for="inputName" class="col-sm-2 col-form-label">Ad</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(z => z.CariAdi, new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group row">

        <label for="inputEmail" class="col-sm-2 col-form-label">Soyad</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(z => z.CariSoyadi, new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group row">

        <label for="inputName2" class="col-sm-2 col-form-label">E-Mail Adresi</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(z => z.CariMaili, new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group row">

        <label for="inputExperience" class="col-sm-2 col-form-label">Şehir</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(z => z.CariSehir, new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group row">

        <label for="inputSkills" class="col-sm-2 col-form-label">Şifre</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(z => z.CariSifresi, new { @class = "form-control" })

        </div>

    </div>

    @*<div class="form-group row">

        <div class="offset-sm-2 col-sm-10">

            <div class="checkbox">

                <label>

                    <input type="checkbox"> Değişiklikleri kabul ediyorum.

                </label>

            </div>

        </div>

    </div>*@

    <div class="form-group row">

        <div class="offset-sm-2 col-sm-10">

            <button type="submit" class="btn btn-danger">Güncelle</button>

        </div>

    </div>

</form>

}