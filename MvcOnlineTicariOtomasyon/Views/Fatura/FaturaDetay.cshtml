@using MvcOnlineTicariOtomasyon.Models.Siniflar
@using PagedList
@using PagedList.Mvc
@model PagedList<FaturaKalem>
@{
    ViewBag.Title = "FaturaDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



<br />
<h2>Fatura Kalemleri Sayfası</h2>
<br />

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">@ViewBag.DepartmanAdi Departmanı</li>
</ol>


<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Açıklama</th>
        <th>Miktar</th>
        <th>Birim Fiyat</th>
        <th>Tutar</th>
    </tr>
    @{int sayac = 0;}
    @foreach (var item in Model)
    {
        <tr>
            <td>@{sayac += 1;} @sayac</td>
            <td>@item.FaturaKalemAciklama</td>
            <td>@item.FaturaKalemMiktar</td>
            <td>@item.FaturaKalemBirimFiyat ₺</td>
            <td>@item.FaturaKalemTutar ₺</td>
        </tr>
    }
</table>

@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("FaturaDetay", new { sayfa }),
new PagedListRenderOptions@*Sayfa değerine her tıklandığında, yeni bir sayfa oluşturarak bana Kategori Listesini aç*@
{
LiElementClasses = new List<string>
{
"page-link"         //Sayfanın linklerini ekle
}
})

<a href="/Fatura/FaturaKalemiEkle" class="btn btn-info" style="background-color:peru; color:aliceblue;">Yeni Kalem Girişi Ekle</a>
<a href="/Fatura/Index" class="btn btn-info" style="background-color:darkcyan; color:aliceblue;">Fatura Listesi</a>