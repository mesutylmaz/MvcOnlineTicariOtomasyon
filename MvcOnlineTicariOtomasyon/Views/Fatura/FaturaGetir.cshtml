@model MvcOnlineTicariOtomasyon.Models.Siniflar.Fatura
@{
    ViewBag.Title = "FaturaGetir";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Fatura Güncelleme Sayfası</h2>
<br />

@using (Html.BeginForm("FaturaGuncelle", "Fatura", FormMethod.Post))
{
<div class="form-group">
    @Html.HiddenFor(x => x.FaturaID)
    Seri No
    @Html.TextBoxFor(z => z.FaturaSeriNo, new { @class = "form-control" })
    <br />
    Sıra No
    @Html.TextBoxFor(z => z.FaturaSiraNo, new { @class = "form-control", @type = "number" })
    <br />
    Vergi Dairesi
    @Html.TextBoxFor(z => z.FaturaVergiDairesi, new { @class = "form-control" })
    <br />
    Tarih
    @Html.TextBoxFor(z => z.FaturaTarih, new { @class = "form-control", @type = "date" })
    <br />
    Saat
    @Html.TextBoxFor(z => z.FaturaSaat, new { @class = "form-control", @type = "Time" })
    <br />
    Teslim Eden
    @Html.DropDownListFor(x => x.FaturaTeslimEden, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })   @*İlişkili tablo olduğundan bu şekilde yapıyoruz, istenen değeri atayabilmek için*@
    <br />
    Teslim Alan
    @Html.DropDownListFor(x => x.FaturaTeslimAlan, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })   @*İlişkili tablo olduğundan bu şekilde yapıyoruz, istenen değeri atayabilmek için*@
    <br />
    Toplam Tutar
    @Html.TextBoxFor(z => z.ToplamTutar, new { @class = "form-control" })
    <br />
</div>
    <br />
    <button class="btn" style="background-color:#a725a4; color:antiquewhite">Değişiklikleri Kaydet</button>
    <a href="/Fatura/Index" class="btn btn-info" style="background-color:darkcyan; color:aliceblue;">Fatura Listesi</a>
}