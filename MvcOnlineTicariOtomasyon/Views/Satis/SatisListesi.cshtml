@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "SatisListesi";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table id="tbl1" class="table table-bordered" style="margin-top:20px;">
    <thead>
        <tr>
            <th>#</th>
            <th>Ürün</th>
            <th>Cari</th>
            <th>Personel</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam</th>
            <th>Tarih</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @{int sayac = 0;}
        @foreach (var item in Model)
        {
            <tr>
                <td>@{sayac += 1;} @sayac</td>
                <td>@item.Urun.UrunAdi</td>
                <td>@item.Cari.CariAdi @item.Cari.CariSoyadi</td>
                <td>@item.Personel.PersonelAdi @item.Personel.PersonelSoyadi</td>
                <td>@item.SatisHareketAdedi</td>
                <td>@item.SatisHareketFiyati ₺</td>
                <td>@item.SatisHareketToplamTutari ₺</td>
                <td>@item.SatisHareketTarihi.ToShortDateString()</td>
                <td>
                    <a href="/Satis/SatisDetayi/@item.SatisHareketID" class="btn" style="background-color:forestgreen; color: aliceblue">Detay</a>
                    <a href="/Satis/SatisGetir/@item.SatisHareketID" class="btn" style="background-color:darkorange; color:aliceblue">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Satis/SatisEkle" class="btn btn-info">Satış Yap</a>







