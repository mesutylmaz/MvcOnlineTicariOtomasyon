@model MvcOnlineTicariOtomasyon.Models.Siniflar.Kategori
@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<script src="~/Scripts/jquery-3.4.1.js"></script>
<br />
<h2>Kategori Ekleme Sayfası</h2>
<br />

<form class="form-group" method="post">
    @Html.LabelFor(x => x.KategoriAdi)
    @Html.TextBoxFor(x => x.KategoriAdi, new { @class = "form-control" })
    <br />
    <button class="btn btn-success"  id="kayitBasarili">Kaydet</button>
    <a href="/Kategori/KategorileriListele" class="btn btn-info" style="background-color:darkcyan; color:aliceblue;">Kategori Listesi</a>
</form>


<script>
    $('#kayitBasarili').click(function () {
        alert("Kategori başarılı bir şekilde eklendi.")
    });
</script>