@model MvcOnlineTicariOtomasyon.Models.Siniflar.Kategori
@{
    ViewBag.Title = "KategoriGuncelle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Kategori Güncelleme Sayfası</h2>
<br />

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/Scripts/jquery-3.4.1.js"></script>

@using (Html.BeginForm("KategoriGuncelle", "Kategori", FormMethod.Post))
{
    <div class="form-group">
        Kategori Adı
        @Html.TextBoxFor(z => z.KategoriAdi, new { @class = "form-control" })
        @Html.HiddenFor(x => x.KategoriID)
    </div>
    <br />
    <button class="btn" id="btn1" style="background-color:#a725a4; color:antiquewhite">Değişiklikleri Kaydet</button>
    <a href="/Kategori/KategorileriListele" class="btn btn-info" style="background-color:darkcyan; color:aliceblue;">Kategori Listesi</a>
}

<script>
    $('#btn1').on('click', function () {
        Swal.fire({
            title: 'Değişiklikleri kaydetmek istiyor musunuz?',
            showDenyButton: true,
            showCancelButton: true,
            confirmButtonText: 'Evet',
            denyButtonText: 'Hayır',
            cancelButtonText: 'Çıkış',
            customClass: {
                actions: 'my-actions',
                cancelButton: 'order-3',
                confirmButton: 'order-2',
                denyButton: 'order-1 right-gap',
            }
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire('Kaydedildi!', '', 'success')
            } else if (result.isDenied) {
                Swal.fire('Değişiklikler kaydedilmedi', '', 'info')
            } else if (result.isCancelled) {
                Swal.fire('Çıkış yapıldı', '', 'warning')
            }
        })
    });
</script>

